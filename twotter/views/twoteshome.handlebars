<!DOCTYPE html>
<header class="business-header">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
            {{#each username}} 
                <h1 class="tagline" id="{{this._id}}" style="text-align:center">Twotter: {{this.author}}</h1>
            {{/each}}
            </div>
        </div>
    </div>
</header>


    <!-- Page Content -->
    <div class="container">

        <hr>

        <a href="/logout">LOGOUT</a>
        <div class="text-center" style="padding:50px 0">
            <!-- Main Form -->
            <div class="login-form-1">
                <form id="addtweet-form" class="text-left">
                    <div class="addtweet-form-main-message"></div>
                    <div class="main-addtweet-form">
                        <div class="addtweet-group">
                            <div class="form-group">
                                <input type="text" class="form-control" id="twote_text" name="twote_text" placeholder="Twote" style="width:650px">
                            </div>
                        </div>
                        <button type="submit" class="addtweet-button" style="float:right">Add Tweet <i class="fa fa-chevron-right"></i></button>
                    </div>
                </form>
            </div>
            <!-- end:Main Form -->
        </div>
        <!-- /.row -->
    </div>
    <div class="container">

        <hr>
        <div class="row text-center">
            <div class="col-md-9 text-center"><p>All Twotes</p>
                <br>
                <br>
                <div class="col-md-8"><p>Twote</p></div>
                <div class="col-md-3 text-right"><p>User</p></div>
                <div id="twotes_all">
                    {{#each all_twotes}}
                    {{#if this.button}}
                    <div id="{{this._id}}">
                        <br>
                        <div class="col-md-8 {{this.author_id}}"><p>{{this.text}}</p></div>
                        <div class="col-md-3 {{this.author_id}} text-right"><p>{{this.author}}</p></div>
                        <div class="col-md-1 {{this.author_id}}"><button id="{{this._id}}" class="delete_btn">Delete</button></div>
                    </div>
                    {{else}}
                    <div id="{{this._id}}">
                        <br>
                        <div class="col-md-8 {{this.author_id}}"><p>{{this.text}}</p></div>
                        <div class="col-md-3 {{this.author_id}} text-right"><p>{{this.author}}</p></div>
                    </div>
                    {{/if}}
                    {{/each}}
                </div>
            </div>
            <div class="col-md-3" style="border: 5px solid #fff;"><p>Users</p>
                {{#each users_all}}
                <p class="user_author" id="{{this._id}}">{{this.author}}</p>
                {{/each}}
            </div>
        </div>

        <hr>
        <!-- Footer -->
        <footer>
            <div class="row">
                <div class="col-lg-12">
                    <p>Copyright &copy; Twotter App 2016</p>
                </div>
            </div>
            <!-- /.row -->
        </footer>

    </div>